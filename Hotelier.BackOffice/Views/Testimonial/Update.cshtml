@model Hotelier.BackOffice.Models.Testimonial.TestimonialUpdateRequestModel

@{
    ViewData["Title"] = "Referans Güncelleme Sayfası";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Güncelleme Sayfası</h4>
            <p class="card-description">
                Bu sayfada referans güncelleme yapabilirsiniz.
            </p>
            <form class="forms-sample" asp-controller="Testimonial" asp-action="Update" method="post" enctype="multipart/form-data">
                <input type="number" asp-for="Id" hidden="hidden"/>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-3 col-form-label">Ad Soyad</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Type" class="col-sm-3 col-form-label">Tip</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Type">
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Image" class="col-sm-3 col-form-label">Fotoğraf</label>
                    <div class="col-sm-9">
                        <input type="file" class="form-control" asp-for="Image" style="height: 44px;">
                        @if (ViewBag.hasImage != null && ViewBag.hasImage)
                        {
                            <span class="text-dark">
                                *Mevcutta fotoğraf tanımlıdır. Boş bırakırsanız eski fotoğraf tanımlı olacaktır.
                            </span>
                        }
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                <a class="btn btn-light" asp-controller="Testimonial" asp-action="Index">İptal</a>
            </form>
        </div>
    </div>
</div>