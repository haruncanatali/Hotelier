@{
    ViewData["Title"] = "Hotelier Admin Yönetim Paneli";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Üye Artım Grafiği</h4>
                <canvas id="lineChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Abone Artım Grafiği</h4>
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-sm-12">
        <div class="statistics-details d-flex align-items-center justify-content-between">
            <div>
                <p class="statistics-title">Erişim Oranı</p>
                <h3 class="rate-percentage">32.53%</h3>
                <p class="text-danger d-flex">
                    <i class="mdi mdi-menu-down"></i><span>-0.5%</span>
                </p>
            </div>
            <div>
                <p class="statistics-title">Sayfa Görüntülenmeleri</p>
                <h3 class="rate-percentage">7,682</h3>
                <p class="text-success d-flex">
                    <i class="mdi mdi-menu-up"></i><span>+0.1%</span>
                </p>
            </div>
            <div>
                <p class="statistics-title">Yeni Oturum Sayısı</p>
                <h3 class="rate-percentage">68.8</h3>
                <p class="text-danger d-flex">
                    <i class="mdi mdi-menu-down"></i><span>68.8</span>
                </p>
            </div>
            <div class="d-none d-md-block">
                <p class="statistics-title">Sitede Geçirilen Ortalama Zaman</p>
                <h3 class="rate-percentage">2m:35s</h3>
                <p class="text-success d-flex">
                    <i class="mdi mdi-menu-down"></i><span>+0.8%</span>
                </p>
            </div>
            <div class="d-none d-md-block">
                <p class="statistics-title">Yaş Ortalaması</p>
                <h3 class="rate-percentage">23.41</h3>
                <p class="text-danger d-flex">
                    <i class="mdi mdi-menu-down"></i><span>30.78</span>
                </p>
            </div>
            <div class="d-none d-md-block">
                <p class="statistics-title">Ortalama Oturum Süresi</p>
                <h3 class="rate-percentage">34m:40s</h3>
                <p class="text-success d-flex">
                    <i class="mdi mdi-menu-down"></i><span>+18.95%</span>
                </p>
            </div>
        </div>
    </div>
</div>