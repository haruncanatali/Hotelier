@{
    ViewData["Title"] = "Hotelier Admin Yönetim Paneli";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Üye Artım Grafiği</h4>
                <canvas id="lineChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Abone Artım Grafiği</h4>
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-sm-12">
        <div class="statistics-details d-flex align-items-center justify-content-between">
            <div>
                <p class="statistics-title">Kullanıcı Sayısı</p>
                <h3 class="rate-percentage">32.53%</h3>
            </div>
            <div>
                <p class="statistics-title">Personel Sayısı</p>
                <h3 class="rate-percentage">7,682</h3>
            </div>
            <div>
                <p class="statistics-title">Oda Sayısı</p>
                <h3 class="rate-percentage">68.8</h3>
            </div>
            <div class="d-none d-md-block">
                <p class="statistics-title">Servis Sayısı</p>
                <h3 class="rate-percentage">2m:35s</h3>
            </div>
            <div class="d-none d-md-block">
                <p class="statistics-title">Referans Sayısı</p>
                <h3 class="rate-percentage">23.41</h3>
            </div>
            <div class="d-none d-md-block">
                <p class="statistics-title">Abone Sayısı</p>
                <h3 class="rate-percentage">34m:40s</h3>
            </div>
        </div>
    </div>
</div>