@model Hotelier.BackOffice.Models.Service.ServiceUpdateRequestModel

@{
    ViewData["Title"] = "Servis Güncelleme Sayfası";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Servis Güncelleme Sayfası</h4>
            <p class="card-description">
                Bu sayfada servis güncelleme yapabilirsiniz.
            </p>
            <form class="forms-sample" asp-controller="Service" asp-action="Update" method="post" enctype="multipart/form-data">
                <input type="number" asp-for="Id" hidden="hidden"/>
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-3 col-form-label">Başlık</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Icon" class="col-sm-3 col-form-label">İkon</label>
                    <div class="col-sm-9">
                        <input type="file" class="form-control" asp-for="Icon" style="height: 44px;">
                        @if (ViewBag.hasIcon != null && ViewBag.hasIcon)
                        {
                            <span class="text-dark">
                                *Mevcutta ikon tanımlıdır. Boş bırakırsanız eski ikon tanımlı olacaktır.
                            </span>
                        }
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                <a class="btn btn-light" asp-controller="Service" asp-action="Index">İptal</a>
            </form>
        </div>
    </div>
</div>