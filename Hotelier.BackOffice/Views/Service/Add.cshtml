@model Hotelier.BackOffice.Models.Service.ServiceAddRequestModel

@{
    ViewData["Title"] = "Servis Ekleme Sayfası";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Servis Ekleme Sayfası</h4>
            <p class="card-description">
                Bu sayfada servis ekleme yapabilirsiniz.
            </p>
            <form class="forms-sample" asp-controller="Service" asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-3 col-form-label">Başlık</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Icon" class="col-sm-3 col-form-label">İkon</label>
                    <div class="col-sm-9">
                        <input type="file" class="form-control" asp-for="Icon" style="height: 44px;">
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2">Ekle</button>
                <a class="btn btn-light" asp-controller="Service" asp-action="Index">İptal</a>
            </form>
        </div>
    </div>
</div>